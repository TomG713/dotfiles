#!/bin/sh
#
# dot
#
# `dot` handles installation, updates, things like that. Run it periodically
# to make sure you're on the latest and greatest.
sudo -v

export ZSH=$HOME/.dotfiles

# Set macOS defaults
$ZSH/macos/set-defaults.sh

# Install homebrew
$ZSH/homebrew/install.sh 2>&1

# Upgrade homebrew
echo "› brew update"
brew update
brew cask update
brew upgrade 
brew cleanup
brew cask cleanup

# Install software
echo "› Installing $ZSH/script/install"
$ZSH/script/install

# Update gems
gem update && gem update --system

# Update node
echo "› node update"
npm update -g
