" how vendor or node_modules in nerdtree
:let g:NERDTreeIgnore=['\~$', 'vendor', 'node_modules']

" use my go/bin folder, not a special one
:let g:go_bin_path=expand('~/go/bin')

" always show line number
:set number

" show relative line numbers
"   great for navigating X lines
:set relativenumber


" show a vertical and horizontal cursor line
:set cursorline cursorcolumn
